<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Admin Panel | Topic 4</title>
		<script src="https://cdn.tailwindcss.com"></script>
		<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
		<script src="/js/admin.main.js"></script>
		<link rel="stylesheet" href="/css/global.css" />
	</head>
	<body class="flex items-center justify-center min-h-screen px-4 text-zinc-100">
		<div class="max-w-2xl w-full space-y-6">
			<h1 class="text-3xl font-bold text-zinc-100 text-center">Admin Panel</h1>
			<div class="bg-zinc-900 p-6 rounded-lg shadow-lg">
				<h2 class="text-2xl font-semibold text-zinc-100 mb-4">Users</h2>
				<% if(message){ %>
				<div class="text-green-500 mb-4 text-center"><%= message %></div>
				<% } %>
				<% if(error){ %>
				<div class="text-red-500 mb-4 text-center"><%= error %></div>
				<% } %>
				<div class="overflow-x-auto">
					<table class="w-full">
						<thead>
							<tr class="text-left border-b border-zinc-700">
								<th class="pb-2">ID</th>
								<th class="pb-2">Username</th>
								<th class="pb-2">Actions</th>
							</tr>
						</thead>
						<tbody>
							<% users.forEach(user => { %>
							<tr class="border-b border-zinc-700">
								<td class="py-3"><%= user.id %></td>
								<td class="py-3"><%= user.username %></td>
								<td class="py-3">
									<a href="/admin?delete-user=<%= user.id %>" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition-colors">Delete</a>
								</td>
							</tr>
							<% }); %>
						</tbody>
					</table>
				</div>
			</div>
			<a href="/" class="inline-block px-6 py-3 bg-zinc-700 hover:bg-zinc-600 rounded-lg text-white font-medium transition-colors">Back to Home</a>
		</div>
	</body>
</html>
